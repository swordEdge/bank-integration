{
	"compilerOptions": {
		"target": "ES2019",
		"sourceMap": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"outDir": "./build",
		"rootDir": "./src",
		"lib": ["es5", "es6", "ES2019"],
		"moduleResolution": "node",
		"types": ["node"],
		"incremental": true,
		"composite": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "build"]
}
